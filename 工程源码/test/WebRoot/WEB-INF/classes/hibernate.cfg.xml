<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<!-- 方言 -->
		<property name="dialect">
			org.hibernate.dialect.MySQL5Dialect
		</property>

		<!-- 控制台显示SQL -->
		<property name="show_sql">true</property>

		<!-- 自动更新表结构 -->
		<property name="hbm2ddl.auto">update</property>

		<property name="javax.persistence.validation.mode">
			none
		</property>

		<!-- 使用Unicode编码-->
		<property name="connection.UseUnicode">true</property>

		<!-- 使用字符集UTF-8-->
		<property name="connection.characterEncoding">UTF-8</property>

		<property name="connection.url">
			jdbc:mysql://localhost:3306/
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>

		<property name="myeclipse.connection.profile">test</property>

		<mapping resource="com/basic/bean/TGroupfamily.hbm.xml" />
		<mapping resource="com/basic/bean/TGroupstudent.hbm.xml" />
		<mapping resource="com/basic/bean/TUser.hbm.xml" />
		<mapping resource="com/basic/bean/TGroupfriends.hbm.xml" />
		<mapping resource="com/basic/bean/TMyattention.hbm.xml" />
		<mapping resource="com/basic/bean/TPublicinfo.hbm.xml" />
		<mapping resource="com/basic/bean/TFriendrequest.hbm.xml" />
		<mapping resource="com/basic/bean/TJbrxinfo.hbm.xml" />
		<mapping resource="com/basic/bean/TJbrxfriend.hbm.xml" />
		<mapping resource="com/basic/bean/TPersonaldynamic.hbm.xml" />
		<mapping resource="com/basic/bean/TMessagebean.hbm.xml" />
		<mapping resource="com/basic/bean/TMessageflag.hbm.xml" />
		<mapping resource="com/basic/bean/TMycollections.hbm.xml" />
	</session-factory>

</hibernate-configuration>